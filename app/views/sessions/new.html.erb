<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

    <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>


      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", '/users/new' %></p>
  </div>
</div>
